{
  "name": "opentransport-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon ./dist/src/Server.js",
    "start:prod": "cross-env NODE_ENV=production nodemon ./dist/src/Server.js",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "build": "tsc && ncp ./src/cert ./dist/src/cert",
    "prepare": "npm run build"
  },
  "_moduleAliases": {
    "@Root": "dist/src/",
    "@Data": "dist/src/data",
    "@Helpers": "dist/src/helpers",
    "@Controllers": "dist/src/controllers"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "gtfs-realtime-bindings": "0.0.5",
    "jsonwebtoken": "^8.5.1",
    "minimist": "^1.2.5",
    "module-alias": "^2.2.2",
    "ncp": "^2.0.0",
    "node-fetch": "^2.6.0",
    "osrm-text-instructions": "^0.14.1-beta.3",
    "pg": "^7.18.2",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.4",
    "@types/node-fetch": "^2.5.7",
    "@types/pg": "^7.14.3",
    "@types/pg-format": "^1.0.0",
    "typescript": "^3.9.7",
    "babel-jest": "^26.3.0",
    "cross-env": "^7.0.2",
    "jest": "^26.4.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0"
  }
}
